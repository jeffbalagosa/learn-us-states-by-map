[Unit]
Description=learn-us-states-by-map static site (Docker Compose)
Requires=docker.service
After=network-online.target docker.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/learn-us-states-by-map
Environment="COMPOSE_PROJECT_NAME=learn-us-states-by-map"
ExecStart=/usr/bin/docker compose up --build
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
